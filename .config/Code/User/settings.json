{
  "[go]": {
    "editor.insertSpaces": false
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.tabSize": 4
  },
  "debug.console.fontSize": 13,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "editor.fontFamily": "'JetBrainsMono Nerd Font', 'Victor Mono', 'Source Code Pro', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [80, 100, 120],
  "editor.semanticTokenColorCustomizations": {
    "enabled": true
  },
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.associations": { "*.jsonl": "json" },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "go.formatTool": "goimports",
  "go.useLanguageServer": true,
  // "lua.format.singleQuote": true,
  // "lua.luacheckPath": "/usr/bin/luacheck",
  "prettier.arrowParens": "avoid",
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.vueIndentScriptAndStyle": false,
  "prettier.ignorePath": ".prettierignore",
  "python.formatting.blackArgs": [
    "--line-length",
    "79",
    "--skip-string-normalization"
  ],
  "python.formatting.blackPath": "/usr/bin/black",
  "python.formatting.provider": "black",
  // "python.jediEnabled": false,
  "python.languageServer": "Microsoft",
  "python.linting.lintOnSave": true,
  "python.linting.pylintEnabled": true,
  "python.linting.pylintPath": "/usr/bin/pylint",
  "ruby.format": "rubocop",
  "ruby.lint": {
    "reek": {
      "useBundler": true
    },
    "rubocop": {
      "useBundler": true
    }
  },
  "ruby.useBundler": true,
  "ruby.useLanguageServer": true,
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "terminal.integrated.fontFamily": "'MesloLGS NF', 'Hack Nerd Font', monospace",
  "terminal.integrated.fontSize": 13,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "workbench.colorTheme": "Solarized Dark",
  "workbench.iconTheme": "material-icon-theme",
  "tabnine.experimentalAutoImports": true,
  "window.zoomLevel": 0,
  "window.titleBarStyle": "custom"
}
